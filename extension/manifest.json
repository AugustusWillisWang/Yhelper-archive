{
  "name": "Yhelper",
  "version": "0.1",
  "description": "Mark out fake reviews when your are browsing yelp!",
  "permissions": ["activeTab", "declarativeContent", "storage", "https://www.yelp.com/"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  // "content_scripts": [
    // {
      // "matches": ["http://*.foo.com/*", "https://*.yelp.com/*"],
      // "js": ["replace.js"]
      // "css": ["myStyles.css"],
    // }
  // ],
  "manifest_version": 2
}
